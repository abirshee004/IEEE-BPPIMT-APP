<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- Heading Text for the Activity -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Event Images"
        android:textColor="#43A047"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Description Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore and download images related to the events from the link below."
        android:textSize="16sp"
        android:layout_marginBottom="40dp"
        android:textColor="#757575" />

    <!-- Button to open the Google Drive folder -->
    <Button
        android:id="@+id/downloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View and Download Images"
        android:padding="16dp"
        android:textSize="16sp"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp" />

    <!-- Additional Information Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Click the button above to open the folder in your browser or Google Drive app."
        android:textColor="#757575"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Thank You For Visiting Our App 🙏🏼."
        android:textColor="#757575"
        android:textSize="18sp" />

</LinearLayout>
